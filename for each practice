/**
 * By: Jack Wang
 *This program uses for each loops in three applications
 */
import java.util.*;
import TerminalIO.*;
public class For_each_practice {


    public static void main(String[] args) {

     double[] reals = new double[100];
     for(int i=0; i<100; i++){
     	reals[i]=Math.random()*100;
     }
     int sum=0;
     for(double r: reals){
     	sum+=r;
     	System.out.println(r);
     }
     System.out.println("The sum is " +sum);

     KeyboardReader reader=new KeyboardReader();
     ArrayList<String> words=new ArrayList<String>();
     for(int i=0; i<10; i++){
     	words.add(reader.readLine("Please enter a word into the arraylist:\n"));
     }
     String longest=words.get(0);
     int characters=0;
	 for(String s: words){
	 	if(s.length()>longest.length()) longest=s;
	 	characters+=s.length();
	 }
	 
    }
}
