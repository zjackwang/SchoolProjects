	public Hangman(){
		readIn();
		picLabel.setVisible(false);
		messageBox("Welcome to the HANGMAN GAME... click to continue", 20, 20);

	}
	private void readIn(){
		try{
			wordIn=new Scanner(new File("words.txt"));
			while(wordIn.hasNextLine()){
				words.add(wordIn.nextLine());
			}

		}catch(IOException ioex){};
	}

